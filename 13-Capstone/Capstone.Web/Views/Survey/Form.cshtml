@model Capstone.Web.Models.FormViewModel

@{
    ViewData["Title"] = "Form";
}

<h2>Form</h2>

<h4>Survey</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Survey.ParkCode"></label>
                <select asp-for="Survey.ParkCode" asp-items="Model.Parks"></select>
                <span asp-validation-for="Survey.ParkCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Survey.EmailAddress" class="control-label"></label>
                <input asp-for="Survey.EmailAddress" class="form-control" />
                <span asp-validation-for="Survey.EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Survey.State"></label>
                <select asp-for="Survey.State" asp-items="Model.States"></select>
                <span asp-validation-for="Survey.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Survey.ActivityLevel"></label>
                <select asp-for="Survey.ActivityLevel" asp-items="Model.ActivityLevels"></select>
                <span asp-validation-for="Survey.ActivityLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
